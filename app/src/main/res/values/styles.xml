<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/action_bar_color</item>
    </style>

    <style name="action_bar_color" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#4FC3F7</item>
    </style>

    <style name="create_tweet_fragment_theme" parent="android:style/Theme.Holo.Light.DarkActionBar" >
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="fragment_action_bar_color" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:background">#4FC3F7</item>
    </style>

    <style name="user_name_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignTop">@+id/ivProfileImage</item>
        <item name="android:layout_toRightOf">@+id/ivProfileImage</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/no_border</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:text">@string/label_user_name</item>
    </style>

    <style name="screen_name_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignTop">@+id/tvUserName</item>
        <item name="android:layout_alignBottom">@+id/tvUserName</item>
        <item name="android:layout_toRightOf">@+id/tvUserName</item>
        <item name="android:layout_toLeftOf">@+id/tvUserName</item>
        <item name="android:background">@drawable/no_border</item>
        <item name="android:textColor">#90A4AE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:text">@string/label_screen_name</item>
    </style>

    <style name="creation_time_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignBottom">@+id/tvUserName</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/no_border</item>
        <item name="android:textColor">#90A4AE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:text">@string/label_creation_time</item>
    </style>

    <style name="body_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/tvUserName</item>
        <item name="android:layout_toRightOf">@+id/ivProfileImage</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/no_border</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/label_tweet_body</item>
    </style>

</resources>
